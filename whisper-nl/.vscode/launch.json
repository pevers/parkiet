    "version": "0.2.0",
    "configurations": [
        {
            "name": "Inference Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--audio_file",
                "../collector/test/nl_laughter.mp3"
            ],
            "justMyCode": false
        },
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/train_configurable.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--config",
                "quick"
            ],
            "env": {
                "ACCELERATE_MIXED_PRECISION": "fp16"
            }
        },
        {
            "name": "Prepare Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/prepare_data.py",
            "console": "integratedTerminal",
            "args": [
                "--workers",
                "1"
            ]
        }
    ]
}